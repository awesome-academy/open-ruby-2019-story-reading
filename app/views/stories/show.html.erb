<div class="center story_content">
  <div class="row">
    <h1><%= @story.name %></h1>
    <% if current_user&.is_admin? %>
      <%= link_to t(".edit"), "#", class: "btn btn-danger" %>
      <%= link_to t(".delete"), @story, method: :delete,
        class: "btn btn-primary", data: {confirm: t(".confirm")} %>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-2">
      <%= image_tag Settings.story_image %>
    </div>
    <div class="col-md-9">
      <%= render "story_details" %>  
    </div>
  </div>
  <div class="row col-md-offset-1 col-md-10">
    <%= render "list_chapters" %>
  </div>
</div>
