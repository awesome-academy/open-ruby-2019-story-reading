<div class="col-lg-2 col-md-3 col-sm-4">
  <%= link_to story do %>
    <div class="item">
      <div class="picture">
        <%= image_tag Settings.story_image %>
        <span class="time">
          <%= time_ago_in_words(story.chapters.last.created_at) %>
        </span>
        <span class="chap">
          <%= t ".chapter" %><%= story.chapters.maximum("chapter_number") %>
        </span>
      </div>
      <h3><span class="name"><%= story.name %></span></h3>
      <h6><%= story.author %></h6>
      <div class="hover">
        <h3><%= t ".intro" %></h3>
        <div class="intro"><%= story.introduction %></div>
        <h3><%= t ".categories" %></h3>
        <% story.categories.each do |cat| %>
          <div class="cat"><%= link_to cat.name, category_path(cat), class: "tag" %></div>
        <% end %>
        <h5 class="view"><%= t ".total_view" %><%= story.total_view %></h5>
        <h5 class="view"><%= t ".follow" %><%= story.follows.size %></h5>
        <h5 class="view"><%= t ".rate" %><%= average_rate story %></h5>
      </div>
    </div>
  <% end %>
</div>
