<div class="breadcrumb">
  <div class="container">
    <%= link_to t(".home"), root_path, class: "breadcrumb-item" %>
    <span class="breadcrumb-item active"><%= t ".signup" %></span>
  </div>
</div>
<section class="static about-sec">
  <div class="container">
    <h1><%= t ".title" %></h1>
    <div class="form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label t(".name"), class: "col-md-12" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label t(".email"), class: "col-md-12" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label t(".password"), class: "col-md-12" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label t(".confirm"), class: "col-md-12" %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit t(".create"), class: "btn col-md-3" %>
        </div>
        <h5>
          <%= t ".text" %> <%= link_to t(".login"), new_user_session_path %>
        </h5>
      <% end %>
    </div>
  </div>
</section>
